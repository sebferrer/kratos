{
  "$id": "default",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            
            "recovery": {
              "via": "email"
            }
          }
        },
        "name": {
          "title": "First Name",
              "type": "string"
        },
        "last_name": {
          "title": "Last Name",
              "type": "string"
        }
      },
      "required": [
        "email"
      ],
      "additionalProperties": false
    }
  }
}
